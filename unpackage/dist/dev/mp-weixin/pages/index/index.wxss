.homeLayout .banner {
  width: 750rpx;
  padding: 30rpx 0;
}
.homeLayout .banner swiper {
  width: 750rpx;
  height: 340rpx;
  padding: 0 30rpx;
}
.homeLayout .banner swiper-item {
  width: 100%;
  height: 100%;
}
.homeLayout .banner swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.homeLayout .notice {
  width: 690rpx;
  height: 80rpx;
  margin: 0 auto;
  background-color: #f9f9f9;
  border-radius: 80rpx;
  display: flex;
}
.homeLayout .notice .left {
  width: 140rpx;
  font-size: 30rpx;
  color: #2aa47f;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.homeLayout .notice .left .text {
  font-weight: 600;
  font-size: 28rpx;
}
.homeLayout .notice .center {
  flex: 1;
  height: 80rpx;
}
.homeLayout .notice .center swiper {
  height: 100%;
  line-height: 80rpx;
}
.homeLayout .notice .center swiper-item {
  height: 100%;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.homeLayout .notice .right {
  width: 70rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.homeLayout .select {
  padding-top: 50rpx;
}
.homeLayout .select .content {
  width: 720rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.homeLayout .select .content scroll-view {
  white-space: nowrap;
}
.homeLayout .select .content scroll-view .box {
  width: 200rpx;
  height: 430rpx;
  display: inline-block;
  margin-right: 15rpx;
}
.homeLayout .select .content scroll-view .box image {
  width: 100%;
  height: 100%;
}
.homeLayout .select .content scroll-view .box:last-child {
  margin-right: 30rpx;
}
.homeLayout .select .date {
  font-size: 22rpx;
  color: #28b389;
  display: flex;
  align-items: center;
}
.homeLayout .select .date .text {
  margin-left: 5rpx;
}
.homeLayout .theme {
  margin-top: 30rpx;
  font-size: 30rpx;
  padding-bottom: 50rpx;
}
.homeLayout .theme .more {
  font-size: 27rpx;
  color: #888;
}
.homeLayout .theme .content {
  margin-top: 30rpx;
  padding: 0 30rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}